/** --  8  --  **/
/**
 * Suppose the web page you are building requires that all elements with a class of empty
 * have their innerHTML content emptied (made an empty string) once the button
 * with an id of btn-empty is clicked.

 Write the code necessary to do this:
 */
function makeEmpty() {
    var button = document.getElementById('btn-empty');
    button.addEventListener('click', emptyList);
}
function emptyList() {
    var toEmpty = document.getElementsByClassName('empty');
    for (var i = 0; i < toEmpty.length; i++) {
        toEmpty[i].innerHTML = ''
    }
}
makeEmpty()